{
  "name": "shellac",
  "version": "0.7.0",
  "description": "Protect and beautify your shell scripting",
  "keywords": [
    "shell"
  ],
  "homepage": "https://github.com/geelen/shellac#readme",
  "bugs": {
    "url": "https://github.com/geelen/shellac/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geelen/shellac.git"
  },
  "license": "MIT",
  "author": "Glen Maddern",
  "type": "module",
  "main": "esm/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "files": [
    "/lib",
    "/esm"
  ],
  "scripts": {
    "build": "yarn build:parser && yarn build:ts",
    "build:parser": "babel src/grammar.js -d esm",
    "build:ts": "tsc --outDir lib && tsc --module esnext --outDir esm",
    "dev": "run-p -l 'build:parser --watch' 'build:ts --watch'",
    "prepack": "npm run build",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "dependencies": {
    "reghex": "^1.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@types/fs-extra": "^9.0.4",
    "@types/jest": "^26.0.15",
    "fs-extra": "^9.0.1",
    "jest": "^27.4.7",
    "npm-run-all": "^4.1.5",
    "tmp-promise": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.1.2"
  }
}
